# Application Settings
APP_ENV=development
APP_NAME=Chania Skills Development
APP_BASE_URL=http://localhost/chania
APP_UPLOAD_PATH=uploads/
APP_TIMEZONE=Africa/Nairobi

# Database Configuration
DB_HOST=localhost
DB_NAME=chania_db
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# JWT Configuration
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_here_change_this_in_production
JWT_EXPIRY=86400
JWT_REFRESH_WINDOW=604800

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_AUTH_REQUESTS=10
RATE_LIMIT_AUTH_WINDOW=900

# API Configuration
API_VERSION=v1
API_DEBUG=false
API_CORS_ORIGINS=*
API_MAX_PAGE_SIZE=100

# Admin Panel Settings
ADMIN_EMAIL=admin@skillsforafrica.org
ADMIN_ALLOWED_IPS=
ADMIN_LOG_LEVEL=info
ADMIN_SESSION_TIMEOUT=1800

# Security Settings
CSRF_TOKEN_NAME=csrf_token
ADMIN_CSRF_TOKEN_NAME=admin_csrf_token
SESSION_TIMEOUT=1800
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Email Settings
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@skillsforafrica.org
SMTP_ENCRYPTION=tls

# Cache Configuration
CACHE_ENABLED=true
CACHE_DRIVER=file
CACHE_TTL=3600
CACHE_PATH=cache/

# Logging Configuration
LOG_LEVEL=info
LOG_PATH=logs/
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Development Settings
DEBUG_MODE=false
SHOW_ERRORS=false
ERROR_REPORTING=true
