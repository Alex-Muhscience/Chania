# ==============================================
# CHANIA SKILLS FOR AFRICA - ENVIRONMENT CONFIG
# ==============================================

# Application Settings
APP_NAME="Chania Skills for Africa"
APP_VERSION="2.0.0"
APP_ENV="development"
APP_DEBUG=true
APP_TIMEZONE="Africa/Nairobi"

# URL Configuration
APP_BASE_URL="http://localhost/chania"
ADMIN_URL="http://localhost/chania/admin"

# Database Configuration
DB_HOST="localhost"
DB_NAME="chania_db"
DB_USER="root"
DB_PASS=""
DB_CHARSET="utf8mb4"
DB_PORT="3306"

# Security Settings
SESSION_TIMEOUT=7200
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900
PASSWORD_MIN_LENGTH=8
REMEMBER_ME_DURATION=2592000

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH="uploads"
ALLOWED_IMAGE_TYPES="jpg,jpeg,png,gif,webp"
ALLOWED_DOCUMENT_TYPES="pdf,doc,docx,xls,xlsx,ppt,pptx"
ALLOWED_VIDEO_TYPES="mp4,avi,mov,wmv"

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_EMAIL="noreply@skillsforafrica.org"
SMTP_FROM_NAME="Chania Skills for Africa"

# Pagination & Display Settings
ITEMS_PER_PAGE=20
DASHBOARD_RECENT_ITEMS=10
EXPORT_LIMIT=5000

# Logging
LOG_PATH="logs"
ERROR_LOG_ENABLED=true

# Security Features
ENABLE_CSRF_PROTECTION=true
ENABLE_RATE_LIMITING=true
SECURE_COOKIES=true

