# Application Settings
APP_ENV=development # production/staging/development
APP_BASE_URL=http://localhost/chania/
APP_UPLOAD_PATH=./uploads/

# Database Configuration
DB_HOST=localhost
DB_NAME=chania_db
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# Admin Panel Settings
ADMIN_EMAIL=admin@example.com
ADMIN_ALLOWED_IPS=127.0.0.1,::1 # Comma-separated IPs
ADMIN_LOG_LEVEL=INFO # DEBUG/INFO/WARNING/ERROR

# Security Settings
CSRF_TOKEN_NAME=csrf_token
ADMIN_CSRF_TOKEN_NAME=admin_csrf_token
SESSION_TIMEOUT=3600 # 1 hour in seconds
ADMIN_SESSION_TIMEOUT=7200 # 2 hours in seconds

# Email Settings (for password resets, etc.)
SMTP_HOST=localhost
SMTP_PORT=25
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=no-reply@example.com

# Development Settings
DEBUG_MODE=true
SHOW_ERRORS=true